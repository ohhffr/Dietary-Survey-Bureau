<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HealthFragment"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="ScrollViewCount"
        android:scrollbars="none">
        <!-- TODO: Update blank fragment layout -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="380dp"
                android:layout_height="43dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="45dp"
                android:gravity="center"
                android:id="@+id/search_view"
                android:background="@drawable/btn_no"
                android:backgroundTint="#E1D8D8">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="40dp"
                    android:src="@drawable/ic_search"/>
                <EditText
                    android:layout_width="370dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:hint="搜索你想了解的东西"
                    android:background="@null"
                    android:textStyle="bold"
                    android:textColor="#bfbfbf"/>

            </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/search"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="30dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#1A000000" />

                    <RelativeLayout
                        android:id="@+id/data_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        >

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            android:src="@drawable/data" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="70dp"
                            android:text="食卡数据"
                            android:textSize="17sp" />

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="20dp"
                            android:src="@drawable/right_2" />

                    </RelativeLayout>

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="370dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="6dp"
                    android:layout_marginTop="-20dp"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <androidx.cardview.widget.CardView
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginRight="-49dp"
                            android:layout_marginBottom="-44dp"
                            android:backgroundTint="@color/green"
                            app:cardCornerRadius="100dp" />

                        <com.example.quantacup.help.CircleProgressView
                            android:id="@+id/eat_proportions"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_marginTop="23dp"
                            android:layout_marginLeft="20dp"/>

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="366dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/had_eaten"
                            android:layout_width="170dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="190dp"
                            android:layout_marginTop="70dp"
                            android:text="已吃 1000大卡"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/had_reminder"
                            android:layout_width="170dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="190dp"
                            android:layout_marginTop="20dp"
                            android:text="剩余 1250大卡"
                            android:textSize="20sp" />
                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#1A000000" />

                <RelativeLayout
                    android:id="@+id/condition_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="10dp"
                    >

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/condition" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="70dp"
                        android:text="我的状态"
                        android:textSize="17sp" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:src="@drawable/right_2" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        android:layout_width="180dp"
                        android:layout_height="90dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="6dp"
                        android:layout_marginLeft="20dp">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <androidx.cardview.widget.CardView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentTop="true"
                                android:layout_marginLeft="-10dp"
                                android:layout_marginTop="-30dp"
                                android:layout_marginRight="-49dp"
                                android:layout_marginBottom="-44dp"
                                android:backgroundTint="#D5A5DD"
                                app:cardCornerRadius="100dp" />

                        </RelativeLayout>
                        <LinearLayout
                            android:layout_width="170dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="170dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="5dp"
                                android:textSize="20sp"
                                android:text="身高"/>
                            <TextView
                                android:id="@+id/height"
                                android:layout_width="170dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="13dp"
                                android:textSize="20sp"
                                android:text="158cm"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="180dp"
                        android:layout_height="90dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="6dp"
                        android:layout_marginLeft="20dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <androidx.cardview.widget.CardView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_marginLeft="-10dp"
                                android:layout_marginTop="-30dp"
                                android:layout_marginRight="-49dp"
                                android:layout_marginBottom="-44dp"
                                android:backgroundTint="#D5A5DD"
                                app:cardCornerRadius="100dp" />
                        </RelativeLayout>
                        <LinearLayout
                            android:layout_width="170dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="170dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="5dp"
                                android:textSize="20sp"
                                android:text="体重"/>
                            <TextView
                                android:id="@+id/weight"
                                android:layout_width="170dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="13dp"
                                android:textSize="20sp"
                                android:text="45.6kg"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        android:layout_width="180dp"
                        android:layout_height="90dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="6dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <androidx.cardview.widget.CardView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentTop="true"
                                android:layout_marginLeft="-10dp"
                                android:layout_marginTop="-30dp"
                                android:layout_marginRight="-49dp"
                                android:layout_marginBottom="-44dp"
                                android:backgroundTint="#D5A5DD"
                                app:cardCornerRadius="100dp" />

                        </RelativeLayout>
                        <LinearLayout
                            android:layout_width="170dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="170dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="5dp"
                                android:textSize="20sp"
                                android:text="阶段"/>
                            <TextView
                                android:layout_width="170dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="13dp"
                                android:textSize="20sp"
                                android:text="保持期"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="180dp"
                        android:layout_height="90dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="6dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <androidx.cardview.widget.CardView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginLeft="-10dp"
                            android:layout_marginTop="-30dp"
                            android:layout_marginRight="-49dp"
                            android:layout_marginBottom="-44dp"
                            android:backgroundTint="#D5A5DD"
                            app:cardCornerRadius="100dp" />
                        </RelativeLayout>
                        <LinearLayout
                            android:layout_width="170dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="170dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="5dp"
                                android:textSize="20sp"
                                android:text="特殊情况"/>
                            <TextView
                                android:layout_width="170dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="13dp"
                                android:textSize="20sp"
                                android:text="低血糖"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#1A000000" />

                <RelativeLayout
                    android:id="@+id/clock_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="10dp"
                    >

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/clock" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="70dp"
                        android:text="定时提醒"
                        android:textSize="17sp" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:src="@drawable/right_2" />

                </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="370dp"
                android:layout_height="90dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="6dp"
                android:layout_marginLeft="20dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="-10dp"
                        android:layout_marginTop="-30dp"
                        android:layout_marginRight="-49dp"
                        android:layout_marginBottom="-44dp"
                        android:backgroundTint="@color/green"
                        app:cardCornerRadius="100dp" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </ScrollView>

</LinearLayout>