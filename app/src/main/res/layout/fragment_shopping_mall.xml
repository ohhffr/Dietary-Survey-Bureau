                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/commodity11"
                android:layout_below="@+id/commodity09"
                android:layout_marginTop="10dp"
                android:layout_width="170dp"
