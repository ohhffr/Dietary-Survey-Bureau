                        android:textSize="13sp"
                        android:text="￥19. 8"
                        android:textColor="#FA0000"
                        android:layout_below="@+id/commodity10_name"
                        android:layout_alignStart="@+id/commodity10_name"/>

                    <TextView
                        android:layout_marginStart="55dp"
                        android:layout_width="wrap_content"
